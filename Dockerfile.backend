# Dockerfile.backend
# Этап 1: Сборка
# ИСПРАВЛЕНО: используем maven с Java 21
FROM maven:3.9-eclipse-temurin-21 AS build
WORKDIR /app
COPY backend/resource-booking-system/pom.xml .
COPY backend/resource-booking-system/src ./src
RUN mvn clean package -DskipTests

# Этап 2: Запуск
# ИСПРАВЛЕНО: используем JRE 21
FROM eclipse-temurin:21-jre-alpine
WORKDIR /app
COPY --from=build /app/target/*.jar app.jar
EXPOSE 8080
ENTRYPOINT ["java", "-jar", "app.jar"]